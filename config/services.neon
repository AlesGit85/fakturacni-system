# =====================================================
# SLUŽBY APLIKACE - services.neon
# =====================================================

services:
	# Router
	router: App\Core\RouterFactory::createRouter
	
	# Authenticator
	authenticator: App\Model\UserManager

	# =====================================================
	# CORE SLUŽBY
	# =====================================================
	
	# SecurityLogger
	- App\Security\SecurityLogger

	# RateLimiter  
	- App\Security\RateLimiter
	
	# RateLimiterCleaner - OPRAVENO: správný název třídy (s "r")
	- App\Security\RateLimiterCleaner

	# ModuleManager - OPRAVENO: App\Model\ModuleManager (ne App\Modules\ModuleManager)
	- App\Model\ModuleManager

	# SecurityValidator
	- App\Security\SecurityValidator

	# AntiSpam systém
	- App\Security\AntiSpam

	# =====================================================
	# MANAGERY
	# =====================================================
	
	# UserManager už je registrovaný jako authenticator výše
	- App\Model\InvoicesManager  
	- App\Model\ClientsManager
	- App\Model\CompanyManager
	- App\Model\QrPaymentService
	- App\Model\AresService
	- App\Model\EmailService
	- App\Model\TenantManager

	# =====================================================
	# SQL SECURITY AUDIT - NOVÉ!
	# =====================================================

	# SQL Security Audit Tool - webová verze (autowiring databáze)
	- App\Security\SQLSecurityAudit


	# =====================================================
	# AUTO-DISCOVERY
	# =====================================================

search:
	-	in: %appDir%
		classes:
			- *Facade
			- *Factory
			- *Repository
			- *Service