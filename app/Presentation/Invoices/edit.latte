{block content}
<div class="invoice-form-container">
    <div class="page-header">
        {* ✅ BEZPEČNÉ: Statický text *}
        <h1 class="main-title">Upravit fakturu</h1>
        <p class="text-muted">Upravte údaje faktury podle potřeby</p>
    </div>

    <div class="row">
        <div class="col-md-12">
            {* ✅ BEZPEČNÉ: Nette formulář je automaticky chráněný proti XSS *}
            {form invoiceForm}
                <!-- Výběr klienta -->
                <div class="card shadow-sm rounded-lg border-0 mb-4">
                    <div class="card-header">
                        <i class="bi bi-person-lines-fill me-2"></i>
                        {* ✅ BEZPEČNÉ: Statický text *}
                        <h3>Klient</h3>
                    </div>
                    <div class="card-body">
                        <div class="client-type-selector mb-4">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    {* ✅ BEZPEČNÉ: Nette formulářová pole jsou automaticky escapovaná *}
                                    <input type="radio" name="client_type" id="client_type_existing" value="existing" {if $form['client_type']->value === 'existing'}checked{/if} class="client-type-radio">
                                    <label for="client_type_existing" class="client-type-option">
                                        <div class="option-content">
                                            {* ✅ BEZPEČNÉ: Statický text *}
                                            <div class="option-title">Existující klient</div>
                                            <div class="option-description">Vybrat z databáze klientů</div>
                                        </div>
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    {* ✅ BEZPEČNÉ: Nette formulářová pole jsou automaticky escapovaná *}
                                    <input type="radio" name="client_type" id="client_type_manual" value="manual" {if $form['client_type']->value === 'manual'}checked{/if} class="client-type-radio">
                                    <label for="client_type_manual" class="client-type-option">
                                        <div class="option-content">
                                            {* ✅ BEZPEČNÉ: Statický text *}
                                            <div class="option-title">Zadat ručně</div>
                                            <div class="option-description">Vyplnit údaje klienta</div>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>
                        
                        <div id="existing-client-section">
                            <div class="form-floating">
                                {* ✅ BEZPEČNÉ: Nette formulářové prvky jsou automaticky escapované *}
                                {input client_id class => 'form-control'}
                                {label client_id class => 'form-label' /}
                            </div>
                        </div>
                        
                        <div id="manual-client-section" style="display: none;">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        {* ✅ BEZPEČNÉ: Nette formulářové prvky jsou automaticky escapované *}
                                        {input client_name class => 'form-control'}
                                        {label client_name class => 'form-label' /}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        {* ✅ BEZPEČNÉ: Nette formulářové prvky jsou automaticky escapované *}
                                        {input client_ic class => 'form-control'}
                                        {label client_ic class => 'form-label' /}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        {* ✅ BEZPEČNÉ: Nette formulářové prvky jsou automaticky escapované *}
                                        {input client_address class => 'form-control'}
                                        {label client_address class => 'form-label' /}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        {* ✅ BEZPEČNÉ: Nette formulářové prvky jsou automaticky escapované *}
                                        {input client_dic class => 'form-control'}
                                        {label client_dic class => 'form-label' /}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-floating">
                                        {* ✅ BEZPEČNÉ: Nette formulářové prvky jsou automaticky escapované *}
                                        {input client_city class => 'form-control'}
                                        {label client_city class => 'form-label' /}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-floating">
                                        {* ✅ BEZPEČNÉ: Nette formulářové prvky jsou automaticky escapované *}
                                        {input client_zip class => 'form-control'}
                                        {label client_zip class => 'form-label' /}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-floating">
                                        {* ✅ BEZPEČNÉ: Nette formulářové prvky jsou automaticky escapované *}
                                        {input client_country class => 'form-control'}
                                        {label client_country class => 'form-label' /}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Základní údaje faktury -->
                <div class="card shadow-sm rounded-lg border-0 mb-4">
                    <div class="card-header">
                        <i class="bi bi-file-earmark-text me-2"></i>
                        {* ✅ BEZPEČNÉ: Statický text *}
                        <h3>Základní údaje faktury</h3>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    {* ✅ BEZPEČNÉ: Nette formulářové prvky jsou automaticky escapované *}
                                    {input number class => 'form-control'}
                                    {label number class => 'form-label' /}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    {* ✅ BEZPEČNÉ: Nette formulářové prvky jsou automaticky escapované *}
                                    {input issue_date class => 'form-control'}
                                    {label issue_date class => 'form-label' /}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    {* ✅ BEZPEČNÉ: Nette formulářové prvky jsou automaticky escapované *}
                                    {input due_date class => 'form-control'}
                                    {label due_date class => 'form-label' /}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    {* ✅ BEZPEČNÉ: Nette formulářové prvky jsou automaticky escapované *}
                                    {input payment_method class => 'form-control'}
                                    {label payment_method class => 'form-label' /}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Možnosti zobrazení -->
                <div class="card shadow-sm rounded-lg border-0 mb-4">
                    <div class="card-header">
                        <i class="bi bi-gear me-2"></i>
                        {* ✅ BEZPEČNÉ: Statický text *}
                        <h3>Možnosti zobrazení</h3>
                    </div>
                    <div class="card-body">
                        {* ✅ ŘEŠENÍ: Skryté Nette checkboxy *}
                        <div style="display: none;">
                            {input qr_payment}
                            {input show_logo}
                            {input show_signature}
                        </div>
                        
                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="modern-checkbox-wrapper" data-checkbox="qr_payment">
                                    <input type="checkbox" id="qr_payment_visual" class="modern-checkbox">
                                    <label for="qr_payment_visual" class="modern-checkbox-label">
                                        <div class="checkbox-content">
                                            <i class="bi bi-qr-code checkbox-icon"></i>
                                            <div class="checkbox-text">
                                                {* ✅ BEZPEČNÉ: Statický text *}
                                                <div class="checkbox-title">QR kód pro platbu</div>
                                                <div class="checkbox-description">Generovat QR kód</div>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="modern-checkbox-wrapper" data-checkbox="show_logo">
                                    <input type="checkbox" id="show_logo_visual" class="modern-checkbox">
                                    <label for="show_logo_visual" class="modern-checkbox-label">
                                        <div class="checkbox-content">
                                            <i class="bi bi-image checkbox-icon"></i>
                                            <div class="checkbox-text">
                                                {* ✅ BEZPEČNÉ: Statický text *}
                                                <div class="checkbox-title">Zobrazit logo</div>
                                                <div class="checkbox-description">Logo na faktuře</div>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="modern-checkbox-wrapper" data-checkbox="show_signature">
                                    <input type="checkbox" id="show_signature_visual" class="modern-checkbox">
                                    <label for="show_signature_visual" class="modern-checkbox-label">
                                        <div class="checkbox-content">
                                            <i class="bi bi-pen checkbox-icon"></i>
                                            <div class="checkbox-text">
                                                {* ✅ BEZPEČNÉ: Statický text *}
                                                <div class="checkbox-title">Zobrazit podpis</div>
                                                <div class="checkbox-description">Podpis na faktuře</div>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {* JavaScript pro propojení moderních checkboxů s Nette formulářem *}
                <script>
                document.addEventListener('DOMContentLoaded', function() {
                    // Najdeme všechny moderní checkbox wrappery
                    const modernCheckboxes = document.querySelectorAll('.modern-checkbox-wrapper[data-checkbox]');
                    
                    modernCheckboxes.forEach(function(wrapper) {
                        const checkboxName = wrapper.getAttribute('data-checkbox');
                        const visualCheckbox = wrapper.querySelector('.modern-checkbox');
                        const netteCheckbox = document.querySelector('input[name="' + checkboxName + '"]');
                        
                        if (visualCheckbox && netteCheckbox) {
                            // Nastavíme výchozí stav podle Nette checkboxu
                            visualCheckbox.checked = netteCheckbox.checked;
                            
                            // Při kliknutí na vizuální checkbox aktualizujeme Nette checkbox
                            visualCheckbox.addEventListener('change', function() {
                                netteCheckbox.checked = this.checked;
                            });
                            
                            // Pokud se změní Nette checkbox (např. programově), aktualizujeme vizuální
                            netteCheckbox.addEventListener('change', function() {
                                visualCheckbox.checked = this.checked;
                            });
                        }
                    });
                });
                </script>
                
                {if $isVatPayer}
                <!-- Formulář pro plátce DPH - s položkami a DPH -->
                <div class="card shadow-sm rounded-lg border-0 mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-list-ul me-2"></i>
                            {* ✅ BEZPEČNÉ: Statický text *}
                            <h3 class="d-inline">Položky faktury</h3>
                        </div>
                        <button type="button" id="add-item" class="btn btn-sm btn-primary">
                            {* ✅ BEZPEČNÉ: Statický text *}
                            <i class="bi bi-plus-circle"></i> Přidat položku
                        </button>
                    </div>
                    <div class="card-body">
                        <div id="invoice-items">
                            {if $invoiceItems->count() > 0}
                                {foreach $invoiceItems as $i => $item}
                                    <div class="invoice-item card mb-3">
                                        <div class="card-header">
                                            {* ✅ BEZPEČNÉ: Numerický index je automaticky bezpečný *}
                                            Položka #{$i + 1}
                                            <button type="button" class="btn btn-sm btn-outline-danger float-end remove-item">Odebrat</button>
                                        </div>
                                        <div class="card-body">
                                            <div class="row mb-3">
                                                <div class="col-md-6">
                                                    {* ✅ BEZPEČNÉ: Statický text *}
                                                    <label class="form-label">Název položky</label>
                                                    {* ✅ XSS OCHRANA: Escapování názvu položky z databáze *}
                                                    <input type="text" name="items[{$i}][name]" class="form-control" value="{$item->name|escape}" required>
                                                </div>
                                                <div class="col-md-6">
                                                    {* ✅ BEZPEČNÉ: Statický text *}
                                                    <label class="form-label">Popis</label>
                                                    {* ✅ XSS OCHRANA: Escapování popisu položky z databáze *}
                                                    <input type="text" name="items[{$i}][description]" class="form-control" value="{$item->description|escape}">
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-2">
                                                    {* ✅ BEZPEČNÉ: Statický text *}
                                                    <label class="form-label">Množství</label>
                                                    {* ✅ XSS OCHRANA: Escapování numerické hodnoty z databáze *}
                                                    <input type="number" name="items[{$i}][quantity]" class="form-control item-quantity" value="{$item->quantity|escape}" min="0.01" step="0.01" required>
                                                </div>
                                                <div class="col-md-2">
                                                    {* ✅ BEZPEČNÉ: Statický text *}
                                                    <label class="form-label">Jednotka</label>
                                                    {* ✅ XSS OCHRANA: Escapování jednotky z databáze *}
                                                    <input type="text" name="items[{$i}][unit]" class="form-control" value="{$item->unit|escape}" required>
                                                </div>
                                                <div class="col-md-3">
                                                    {* ✅ BEZPEČNÉ: Statický text *}
                                                    <label class="form-label">Cena/ks bez DPH</label>
                                                    {* ✅ XSS OCHRANA: Escapování ceny z databáze *}
                                                    <input type="number" name="items[{$i}][price]" class="form-control item-price" value="{$item->price|escape}" min="0.01" step="0.01" required>
                                                </div>
                                                <div class="col-md-2">
                                                    {* ✅ BEZPEČNÉ: Statický text *}
                                                    <label class="form-label">DPH %</label>
                                                    {* ✅ XSS OCHRANA: Escapování DPH z databáze *}
                                                    <input type="number" name="items[{$i}][vat]" class="form-control item-vat" value="{$item->vat|escape}" min="0" max="100" required>
                                                </div>
                                                <div class="col-md-3">
                                                    {* ✅ BEZPEČNÉ: Statický text *}
                                                    <label class="form-label">Celkem s DPH</label>
                                                    {* ✅ XSS OCHRANA: Escapování celkové částky z databáze *}
                                                    <input type="number" name="items[{$i}][total]" class="form-control item-total" value="{$item->total|escape}" readonly>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {/foreach}
                            {else}
                                <div class="invoice-item card mb-3">
                                    <div class="card-header">
                                        {* ✅ BEZPEČNÉ: Statický text *}
                                        Položka #1
                                        <button type="button" class="btn btn-sm btn-outline-danger float-end remove-item" style="display: none;">Odebrat</button>
                                    </div>
                                    <div class="card-body">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                {* ✅ BEZPEČNÉ: Statický text *}
                                                <label class="form-label">Název položky</label>
                                                {* ⚠️ BEZPEČNOST: Ruční HTML input - hodnoty budou validovány na serveru *}
                                                <input type="text" name="items[0][name]" class="form-control" required>
                                            </div>
                                            <div class="col-md-6">
                                                {* ✅ BEZPEČNÉ: Statický text *}
                                                <label class="form-label">Popis</label>
                                                {* ⚠️ BEZPEČNOST: Ruční HTML input - hodnoty budou validovány na serveru *}
                                                <input type="text" name="items[0][description]" class="form-control">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-2">
                                                {* ✅ BEZPEČNÉ: Statický text *}
                                                <label class="form-label">Množství</label>
                                                {* ⚠️ BEZPEČNOST: Ruční HTML input - numerické hodnoty validované na serveru *}
                                                <input type="number" name="items[0][quantity]" class="form-control item-quantity" value="1" min="0.01" step="0.01" required>
                                            </div>
                                            <div class="col-md-2">
                                                {* ✅ BEZPEČNÉ: Statický text *}
                                                <label class="form-label">Jednotka</label>
                                                {* ⚠️ BEZPEČNOST: Ruční HTML input - hodnoty budou validovány na serveru *}
                                                <input type="text" name="items[0][unit]" class="form-control" value="ks" required>
                                            </div>
                                            <div class="col-md-3">
                                                {* ✅ BEZPEČNÉ: Statický text *}
                                                <label class="form-label">Cena/ks bez DPH</label>
                                                {* ⚠️ BEZPEČNOST: Ruční HTML input - numerické hodnoty validované na serveru *}
                                                <input type="number" name="items[0][price]" class="form-control item-price" min="0.01" step="0.01" required>
                                            </div>
                                            <div class="col-md-2">
                                                {* ✅ BEZPEČNÉ: Statický text *}
                                                <label class="form-label">DPH %</label>
                                                {* ⚠️ BEZPEČNOST: Ruční HTML input - numerické hodnoty validované na serveru *}
                                                <input type="number" name="items[0][vat]" class="form-control item-vat" value="21" min="0" max="100" required>
                                            </div>
                                            <div class="col-md-3">
                                                {* ✅ BEZPEČNÉ: Statický text *}
                                                <label class="form-label">Celkem s DPH</label>
                                                {* ⚠️ BEZPEČNOST: Ruční HTML input - readonly pole, hodnoty počítané JavaScriptem *}
                                                <input type="number" name="items[0][total]" class="form-control item-total" readonly>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {/if}
                        </div>
                    </div>
                </div>
                {else}
                <!-- Formulář pro neplátce DPH - zjednodušený bez DPH -->
                <div class="card shadow-sm rounded-lg border-0 mb-4">
                    <div class="card-header">
                        <i class="bi bi-list-ul me-2"></i>
                        {* ✅ BEZPEČNÉ: Statický text *}
                        <h3>Předmět fakturace</h3>
                    </div>
                    <div class="card-body">
                        {var $firstItem = $invoiceItems->count() > 0 ? $invoiceItems->fetch() : null}
                        <div class="mb-3">
                            {* ✅ BEZPEČNÉ: Statický text *}
                            <label class="form-label">Předmět fakturace</label>
                            {* ✅ XSS OCHRANA: Escapování názvu položky z databáze *}
                            <textarea name="items[0][name]" class="form-control" rows="3" required>{if $firstItem}{$firstItem->name|escape}{/if}</textarea>
                            <input type="hidden" name="items[0][description]" value="">
                            <input type="hidden" name="items[0][quantity]" value="1">
                            <input type="hidden" name="items[0][unit]" value="ks">
                            <input type="hidden" name="items[0][vat]" value="0">
                        </div>
                        <div class="mb-3">
                            {* ✅ BEZPEČNÉ: Statický text *}
                            <label class="form-label">Částka (konečná)</label>
                            <div class="input-group">
                                {* ✅ XSS OCHRANA: Escapování celkové částky z databáze *}
                                <input type="number" name="items[0][total]" id="simple-total" class="form-control" min="0.01" step="0.01" required 
                                    value="{if $firstItem}{$firstItem->total|escape}{else}0{/if}">
                                <span class="input-group-text">Kč</span>
                            </div>
                            {* ✅ XSS OCHRANA: Escapování ceny z databáze *}
                            <input type="hidden" name="items[0][price]" id="simple-price" 
                                value="{if $firstItem}{$firstItem->price|escape}{else}0{/if}">
                        </div>
                    </div>
                </div>
                {/if}
                
                <!-- Poznámka -->
                <div class="card shadow-sm rounded-lg border-0 mb-4">
                    <div class="card-header">
                        <i class="bi bi-chat-left-text me-2"></i>
                        {* ✅ BEZPEČNÉ: Statický text *}
                        <h3>Poznámka</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-floating">
                            {* ✅ BEZPEČNÉ: Nette formulářové prvky jsou automaticky escapované *}
                            {input note class => 'form-control', style => 'height: 100px'}
                            {label note class => 'form-label' /}
                        </div>
                    </div>
                </div>
                
                <!-- Akční tlačítka -->
                <div class="action-buttons-container">
                    <div class="d-flex justify-content-between">
                        {* ✅ BEZPEČNÉ: Nette link je automaticky escapovaný *}
                        <a n:href="default" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Zpět na seznam faktur
                        </a>
                        {* ✅ BEZPEČNÉ: Nette formulářové tlačítko *}
                        <button n:name="send" class="btn btn-primary">
                            <i class="bi bi-check-lg"></i> Uložit změny
                        </button>
                    </div>
                </div>
            {/form}
        </div>
    </div>
</div>
{/block}