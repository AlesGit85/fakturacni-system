                            <th>Spoleƒçnost</th>
                            <th>Administr√°tor</th>
                            <th>Statistiky</th>
                            <th>Stav</th>
                            <th>Akce</th>
                        </tr>
                    </thead>
                    <tbody>
                        {foreach $tenants as $tenant}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="tenant-icon me-3">
                                            <i class="bi bi-building" style="color: #B1D235; font-size: 1.5rem;"></i>
                                        </div>
                                        <div>
